# Imports go at the top
from microbit import *
from Maqueen import*

robot = Maqueen()

sensor_1 = robot.read_patrol (0)
sensor_2 = robot.read_patrol (1)

while True:
    if (str(sensor_1)) == 1:
        robot.motor_stop_all()
    elif (str(sensor_2)) == 1:
        robot.set_motor(0,0)
        robot.set_motor(1,0)
    else:
        robot.set_motor(0,255)
        robot.set_motor(1,255)
